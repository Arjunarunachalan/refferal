            margin: 5px 0;
        }

        .Invoice-details h1 {
            font-size: 35px;
            line-height: 40px;
            color: #313131;
            font-weight: bold;
            margin: 5px 0;
        }

        .Invoice-details .details {
            width: 100%;
        }

        .Invoice-details .details .title {
            width: 100%;
            display: flex;
            align-items: flex-start;
        }

        .Invoice-details .details .title h3 {
            color: gray;
            font-size: 14px;
        }

        .Invoice-details .details .row {
            width: 100%;
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            align-self: center;
        }


        .section .Invoice-to {
            color: #313131;
        }

        .Invoice-to .header {
            background: #f2f2f2;
            padding: 10px 20px;
        }

        .Invoice-to .header h4 {
            margin: 0px;
            color: #111;
            font-size: 16px;
        }

        .Invoice-to .invoice-content p {
            margin: 10px 0;
        }

        .section .table-title h2 {
            color: gray;
            font-size: 14px;
        }

        .section .table {
            color: #313131;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        thead {
            background: #f2f2f2;
        }

        th {
            padding: 10px;
            text-align: right;
            color: #111;
        }

        .th-left {
            padding: 10px 15px;
            text-align: left;
            color: #111;
        }

        td {
            text-align: right;
            padding: 10px;
        }

        .td-left {
            text-align: left;
            padding: 10px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .special-section {
            display: flex;
            flex-direction: column;
            gap: 10px;
            margin-top: 20px;
        }



        .special-section .special-invoice {
            display: flex;
            align-items: center;
            justify-content: flex-end;
            gap: 10px;
            padding: 10px;
            border-bottom: 1px solid #ccc;
        }

        .special-wrap .header {
            background: #f2f2f2;
            padding: 10px;
        }

        .special-wrap .header h4 {
            margin: 0px;
            color: #111;
            font-size: 16px;
        }

        .special-wrap .special-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 10px;
        }

        .special-wrap .special-content p {
            color: gray;
            font-size: 16px;
            margin: 0;
        }

        .acc-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 5px;
            margin: 20px 0;
        }

        .acc-section h5 {
            margin: 0px;
            font-size: 14px;
        }

        .acc-section h5 a {
            margin: 0;
            text-decoration: none;
            color: #0564d1;
            text-align: center;
        }

        .acc-section h4 {
            margin: 5px;
            text-align: center;
        }

       

        .section .footer {
