        .main {
            min-height: 100vh;
            margin: 0;
            box-sizing: border-box;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            background: #f2f2f2;
            color: #313131;
        }

        .container {
            display: flex;
            flex-direction: column;
            background: #fff;
        }

        .container .header-wrap {
