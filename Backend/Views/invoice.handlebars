    <style>
        body {
            margin: 0;
            padding: 0;
        }

        .main {
            min-height: 100vh;
            margin: 0;
            box-sizing: border-box;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #f2f2f2;
        }

        .container {
            padding: 3rem;
            display: flex;
            flex-direction: column;
            width: 70%;
            background: #fff;
        }

        .container .section {
            display: flex;
            flex-direction: column;
        }

        .header-section {
            display: flex;
        }

        .header-section .left {
            display: flex;
            flex: 2;
            flex-direction: column;
        }

        .header-section .right {
            display: flex;
            flex: 1;
            flex-direction: column;
            justify-content: center;
            padding-right: 20px;
        }

        .left .header {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .left .header h1 {
            color: #0564d1;
            margin: 5px;
            font-size: 36px;
        }

        .left .content {
            height: 200px;
            padding: 10px 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .left .content .link {
            color: #111;
            text-decoration: none;
            cursor: pointer;
        }

        .left .content .clr-link {
            color: #0564d1;
            text-decoration: underline;
        }

        .content p {
            margin: 5px;
            line-height: 1.5;
            font-weight: 500;
        }

        .right .invoice-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 10px;

        }

        .right .header h2 {
            color: grey;
        }

        .invoice-content .left-invoice p {
            margin: 5px 0;
            padding: 8px 0;
            line-height: 1;
            font-size: 14px;
            font-weight: 500;
        }

        .invoice-content .right-invoice p {
            margin: 5px 0;
            padding: 8px 10px;
            line-height: 1;
            font-size: 12px;
            font-weight: 600;
            background: #f2f2f2;
        }

        .section .Invoice-to {
            /* width: 100%; */
            padding: 10px 20px;
        }

        .Invoice-to .header {
            width: 40%;
            background: rgb(33, 235, 117);
            padding: 10px;
        }

        .Invoice-to .header h4 {
            margin: 0px;
            color: #fff;
            font-size: 16px;
        }

        .Invoice-to .invoice-content p {
            margin: 10px 0;
        }

        .section .table {
            padding: 10px 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        thead {
            background: rgb(33, 235, 117);
        }

        th {
            padding: 10px;
            text-align: right;
            color: #fff;
        }

        .th-left {
            padding: 10px 15px;
            text-align: left;
            color: #fff;
        }

        td {
            text-align: right;
            padding: 10px;
        }

        .td-left {
            text-align: left;
            padding: 10px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .special-section {
            display: flex;
            padding: 10px 20px;
            gap: 10px;
        }

        .special-section .special-wrap {
            flex: 2;
        }

        .special-section .special-invoice {
            flex: 1;
            display: flex;
            gap: 10px;
        }

        .special-wrap .header {
            background: rgb(33, 235, 117);
            padding: 10px;
        }

        .special-wrap .header h4 {
            margin: 0px;
            color: #fff;
            font-size: 16px;
        }

        .special-wrap .special-content {
            min-height: 150px;
            display: flex;
            align-items: center;
            padding: 10px;
            background: #f2f2f2;
        }

        .special-wrap .special-content p {
            color: gray;
            font-size: 16px;
        }

        .special-invoice .left-invoice {
            display: flex;
            flex-direction: column;
            flex: 1;
            align-items: flex-end;
        }

        .special-invoice .right-invoice {
            display: flex;
            flex-direction: column;
            flex: 1;
            align-items: flex-end;
        }

        .special-invoice .left-invoice p,
        .special-invoice .right-invoice p {
            color: grey;
            margin: 5px;
            font-size: 14px;
            font-weight: 600;
        }

        .acc-section {
            display: flex;
            padding: 10px 20px;
            gap: 10px;
        }

        .acc-section .acc-left {
            flex: 2;
            display: flex;
            align-items: center;
            justify-content: center;

        }

        .acc-section .acc-left h2 {
            color: grey;
        }

        .acc-section .acc-right {
            flex: 1;
        }

        .acc-section .acc-right .acc-header {
            margin-bottom: 5px;
        }

        .acc-section .acc-right .acc-header h4 {
            margin: 0;
            color: grey;
        }

        .acc-section .acc-right .acc-content {
            display: flex;
            gap: 5px;
        }

        .acc-section .acc-right .acc-content p {
            margin: 5px 0;
        }

        .section .footer {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .footer h4 {
            margin: 5px 0;
            font-weight: 500;
        }

        .footer h4 .link {
            color: #111;
            font-size: 16px;
            text-decoration: none;
            cursor: pointer;
        }

        /* Media query for tablets */
        @media only screen and (max-width: 768px) {
            .container {
                min-width: 100%;
                padding: 0;
            }

            .container .header-section {
                flex-direction: column;
            }

            .container .header-section .right {
