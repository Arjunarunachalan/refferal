            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .footer h4 {
            margin: 5px 0;
            font-weight: 500;
        }

        .footer h4 .link {
            color: #111;
            font-size: 16px;
            text-decoration: none;
            cursor: pointer;
        }

        /* Media query for tablets */
        @media only screen and (max-width: 768px) {
            .container {
                min-width: 80%;
                padding: 0;
            }

            .container .section {
                padding: 2rem;
            }

            .container .header-section {
                flex-direction: column;
            }

            .container .header-section .right {
                padding: 10px 20px;
            }

            .special-section {
                flex-direction: column;
            }
        }

        /* Media query for smartphones */
        @media only screen and (max-width: 576px) {
            .container {
                min-width: 100%;
                padding: 0;
            }

            .container .section {
                padding: 1rem;
            }

            .container .header-section {
                flex-direction: column;
            }

            .container .header-section .right {
                padding: 10px 20px;
            }

            .special-section {
                flex-direction: column;
            }
        }
    </style>
</head>

