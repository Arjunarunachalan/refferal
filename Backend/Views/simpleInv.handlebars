            height: 250px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .header-wrap h1 {
            font-weight: bold;
            font-size: 50px;
            line-height: 60px;
            margin: 20px 0;
            font-style: normal;
            color: #fff;
        }

        .container .section {
            display: flex;
            flex-direction: column;
            padding: 1.5rem 3rem;
        }

        .header-section {
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

        .header-section img {
            width: 100px;
            height: 60px;
        }

        .section .Invoice-details {
            display: flex;
            flex-direction: column;
        }

        .Invoice-details .intro,
